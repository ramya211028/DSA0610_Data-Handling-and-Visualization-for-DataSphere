library(ggalt)
sales_campaign_data &lt;- data.frame(
Product = c(&quot;A&quot;, &quot;B&quot;, &quot;C&quot;),
Before = c(200, 300, 400),
After = c(250, 350, 450)
)
ggplot(sales_campaign_data) +
geom_dumbbell(aes(x = Before, xend = After, y = Product), size = 3, color = &quot;gray&quot;, size_x
= 3, size_xend = 3) +
labs(title = &quot;Sales Before and After Campaign&quot;,
x = &quot;Sales&quot;,
y = &quot;Product&quot;) +
theme_minimal()
